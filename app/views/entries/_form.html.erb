<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :raw_name %><br />
    <% if (@entry.raw_name == nil) %>
      <%= f.text_field :raw_name %>
    <% else %>
      <%= @entry.raw_name %>
    <% end %>
  </div>
  <div class="field">
    <%= label_tag :final_name %><br />
    <%= text_field_tag :final_name, @finalName %>
  </div>
  <div class="field">
    <%= label_tag :final_name_auto %><br />
    <%= check_box_tag :final_name_auto, "1", @finalNameAuto %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :account %><br />
    <%= f.collection_select :account_id, Account.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
